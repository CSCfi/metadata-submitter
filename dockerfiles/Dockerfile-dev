#=======================
FROM ghcr.io/astral-sh/uv:python3.14-bookworm-slim AS appbase
#=======================

RUN apt-get update \
    && apt-get install -y ca-certificates git curl

WORKDIR /app

# Copy uv files
COPY pyproject.toml .
COPY uv.lock .
COPY .python-version .

# Copy project files
COPY README.md .
COPY metadata_backend ./metadata_backend
COPY private ./private

# Install dependencies and create virtual environment
RUN uv sync --dev

# Use virtual environment by default
ENV PATH="/app/.venv/bin:$PATH"

#=======================
FROM appbase AS develop
#=======================

# Copy test files so tests can be run in the dev container
COPY tests ./tests
COPY .pytest.ini .
