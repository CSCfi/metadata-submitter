{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "BP Sample",
    "$defs": {
        "sampleAttribute": {
            "title": "Sample Attributes",
            "description": "Properties and attributes of the sample set. These can be entered as free-form tag-value pairs. Submitters may be asked to follow a community established ontology when describing the work.",
            "oneOf": [
                {
                    "type": "array",
                    "title": "Attribute list",
                    "items": {
                        "oneOf": [
                            {
                                "type": "object",
                                "title": "Sample attribute item",
                                "required": [
                                    "tag",
                                    "value"
                                ],
                                "properties": {
                                    "tag": {
                                        "type": "string",
                                        "title": "Attribute tag"
                                    },
                                    "value": {
                                        "type": [
                                            "string",
                                            "number"
                                        ],
                                        "title": "Attribute value"
                                    },
                                    "units": {
                                        "type": "string",
                                        "title": "Optional scientific units"
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "title": "Coded attribute item",
                                "required": [
                                    "tag",
                                    "code",
                                    "scheme",
                                    "meaning"
                                ],
                                "properties": {
                                    "tag": {
                                        "type": "string",
                                        "title": "Attribute tag"
                                    },
                                    "code": {
                                        "type": "string",
                                        "title": "Attribute code"
                                    },
                                    "scheme": {
                                        "type": "string",
                                        "title": "Attribute scheme designator"
                                    },
                                    "meaning": {
                                        "type": "string",
                                        "title": "Attribute cleartext meaning"
                                    },
                                    "schemeVersion": {
                                        "type": "string",
                                        "title": "Attribute scheme version"
                                    }
                                }
                            }
                        ]
                    }
                },
                {
                    "type": "object",
                    "title": "Attribute object",
                    "properties": {
                        "attribute": {
                            "#ref": "#"
                        },
                        "attributeSet": {
                            "#ref": "#/$defs/sampleAttributeSet"
                        }
                    }
                }
            ]
        },
        "sampleAttributeSet": {
            "title": "Sample Attribute Set list",
            "description": "Reusable set of attributes to encode multiple tag-value or tag-code value pairs.",
            "type": "array",
            "items": {
                "type": "object",
                "title": "Sample attribute item",
                "properties": {
                    "tag": {
                        "type": "string",
                        "title": "Tag title"
                    },
                    "attribute": {
                        "items": {
                            "#ref": "#/$defs/sampleAttribute"
                        }
                    },
                    "numericAttribute": {
                        "items": {
                            "#ref": "#/$defs/sampleAttribute"
                        }
                    },
                    "codedAttribute": {
                        "items": {
                            "#ref": "#/$defs/sampleAttribute"
                        }
                    },
                    "attributeSet": {
                        "items": {
                            "#ref": "#"
                        }
                    }
                },
                "required": [
                    "tag"
                ],
                "oneOf": [
                    {
                        "required": [
                            "attribute"
                        ]
                    },
                    {
                        "required": [
                            "numericAttribute"
                        ]
                    },
                    {
                        "required": [
                            "codedAttribute"
                        ]
                    },
                    {
                        "required": [
                            "attributeSet"
                        ]
                    }
                ],
                "additionalProperties": false
            }
        }
    },
    "type": "object",
    "additionalProperties": true,
    "oneOf": [
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "biologicalBeing": {
                    "title": "Biological Being Type",
                    "description": "A human being or animal.",
                    "type": "object",
                    "properties": {
                        "alias": {
                            "title": "Alias Type",
                            "type": "string"
                        },
                        "attributes": {
                            "$ref": "#/$defs/sampleAttribute"
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "case": {
                    "title": "Case Type",
                    "description": "A pathological case that references one biological being.",
                    "type": "object",
                    "required": [
                        "biologicalBeing"
                    ],
                    "properties": {
                        "alias": {
                            "title": "Alias Type",
                            "type": "string"
                        },
                        "biologicalBeing": {
                            "title": "Biological Being Type",
                            "description": "Identifies the biological being the case is for.",
                            "type": "object",
                            "properties": {
                                "refname": {
                                    "title": "Reference name",
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "specimen": {
                    "title": "Specimen Type",
                    "description": "A removed part of a human/animal being.",
                    "type": "object",
                    "required": [
                        "extractedFrom"
                    ],
                    "properties": {
                        "alias": {
                            "title": "Alias Type",
                            "type": "string"
                        },
                        "attributes": {
                            "$ref": "#/$defs/sampleAttribute"
                        },
                        "extractedFrom": {
                            "title": "Extracted From Type",
                            "description": "The alias of the biological being object where specimen is extracted from.",
                            "type": "object",
                            "properties": {
                                "refname": {
                                    "title": "Reference name",
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "block": {
                    "title": "Block Type",
                    "description": "A part or a collection of parts of one or many Specimens that has/have been sampled and processed for further investigation.",
                    "type": "object",
                    "required": [
                        "sampledFrom"
                    ],
                    "properties": {
                        "alias": {
                            "title": "Alias Type",
                            "type": "string"
                        },
                        "attributes": {
                            "$ref": "#/$defs/sampleAttribute"
                        },
                        "sampledFrom": {
                            "title": "Sampled From Type",
                            "description": "The alias of the specimen object where block is sampled from.",
                            "type": "object",
                            "properties": {
                                "refname": {
                                    "title": "Reference name",
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "slide": {
                    "title": "Slide Type",
                    "description": "A physical slide that has been created out of one or more Blocks.",
                    "type": "object",
                    "required": [
                        "createdFrom",
                        "stainingInformation"
                    ],
                    "properties": {
                        "alias": {
                            "title": "Alias Type",
                            "type": "string"
                        },
                        "attributes": {
                            "$ref": "#/$defs/sampleAttribute"
                        },
                        "createdFrom": {
                            "title": "Sampled From Type",
                            "description": "The alias of the block object where slide is created from.",
                            "type": "object",
                            "properties": {
                                "refname": {
                                    "title": "Reference name",
                                    "type": "string"
                                }
                            }
                        },
                        "stainingInformation": {
                            "title": "Staining of the slide",
                            "description": "The alias of the staining object for the slide.",
                            "type": "object",
                            "properties": {
                                "refname": {
                                    "title": "Reference name",
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}
