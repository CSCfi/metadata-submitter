{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Bigpicture Dataset",
    "$defs": {
        "attributes": {
            "title": "Attributes",
            "description": "Collection of attributes.",
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "anyOf": [
                            {
                                "properties": {
                                    "tag": {
                                        "type": "string",
                                        "title": "Attribute tag"
                                    },
                                    "value": {
                                        "type": [
                                            "string",
                                            "number",
                                            "null"
                                        ],
                                        "title": "Attribute value"
                                    }
                                },
                                "required": [
                                    "tag",
                                    "value"
                                ]
                            },
                            {
                                "properties": {
                                    "tag": {
                                        "type": "string",
                                        "title": "Attribute tag"
                                    },
                                    "value": {
                                        "type": "number",
                                        "title": "Attribute value"
                                    },
                                    "units": {
                                        "type": "string",
                                        "description": "Scientific units of the value."
                                    }
                                },
                                "required": [
                                    "tag",
                                    "value",
                                    "units"
                                ]
                            },
                            {
                                "properties": {
                                    "tag": {
                                        "type": "string",
                                        "title": "Attribute tag"
                                    },
                                    "value": {
                                        "type": "object",
                                        "title": "Attribute value",
                                        "properties": {
                                            "code": {
                                                "type": "string",
                                                "title": "The code value."
                                            },
                                            "scheme": {
                                                "type": "string",
                                                "title": "The scheme designator of the code."
                                            },
                                            "meaning": {
                                                "type": "string",
                                                "title": "Cleartext meaning of the code."
                                            },
                                            "schemeVersion": {
                                                "type": [
                                                    "string",
                                                    "null"
                                                ],
                                                "title": "Optional scheme version of the scheme designator."
                                            }
                                        },
                                        "required": [
                                            "code",
                                            "scheme",
                                            "meaning",
                                            "schemeVersion"
                                        ]
                                    }
                                },
                                "required": [
                                    "tag",
                                    "value"
                                ]
                            },
                            {
                                "properties": {
                                    "tag": {
                                        "type": "string",
                                        "title": "Attribute tag"
                                    },
                                    "value": {
                                        "type": "object",
                                        "title": "Attribute value",
                                        "description": "These will only occur when parsing a setAttribute.",
                                        "properties": {
                                            "stringAttribute": {
                                                "anyOf": [
                                                    {
                                                        "refs": "#/$defs/attributes"
                                                    },
                                                    {
                                                        "type": "object",
                                                        "properties": {
                                                            "tag": {
                                                                "type": "string"
                                                            },
                                                            "value": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "required": [
                                                            "tag",
                                                            "value"
                                                        ]
                                                    }
                                                ]
                                            },
                                            "numericAttribute": {
                                                "anyOf": [
                                                    {
                                                        "refs": "#/$defs/attributes"
                                                    },
                                                    {
                                                        "type": "object",
                                                        "properties": {
                                                            "tag": {
                                                                "type": "string"
                                                            },
                                                            "value": {
                                                                "type": "number"
                                                            }
                                                        },
                                                        "required": [
                                                            "tag",
                                                            "value"
                                                        ]
                                                    }
                                                ]
                                            },
                                            "measurementAttribute": {
                                                "anyOf": [
                                                    {
                                                        "refs": "#/$defs/attributes"
                                                    },
                                                    {
                                                        "type": "object",
                                                        "properties": {
                                                            "tag": {
                                                                "type": "string"
                                                            },
                                                            "value": {
                                                                "type": "string"
                                                            },
                                                            "units": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "required": [
                                                            "tag",
                                                            "value",
                                                            "units"
                                                        ]
                                                    }
                                                ]
                                            },
                                            "codeAttribute": {
                                                "anyOf": [
                                                    {
                                                        "refs": "#/$defs/attributes"
                                                    },
                                                    {
                                                        "type": "object",
                                                        "properties": {
                                                            "tag": {
                                                                "type": "string",
                                                                "title": "Attribute tag"
                                                            },
                                                            "value": {
                                                                "type": "object",
                                                                "title": "Attribute value",
                                                                "properties": {
                                                                    "code": {
                                                                        "type": "string",
                                                                        "title": "The code value."
                                                                    },
                                                                    "scheme": {
                                                                        "type": "string",
                                                                        "title": "The scheme designator of the code."
                                                                    },
                                                                    "meaning": {
                                                                        "type": "string",
                                                                        "title": "Cleartext meaning of the code."
                                                                    },
                                                                    "schemeVersion": {
                                                                        "type": [
                                                                            "string",
                                                                            "null"
                                                                        ],
                                                                        "title": "Optional scheme version of the scheme designator."
                                                                    }
                                                                },
                                                                "required": [
                                                                    "code",
                                                                    "scheme",
                                                                    "meaning",
                                                                    "schemeVersion"
                                                                ]
                                                            }
                                                        },
                                                        "required": [
                                                            "tag",
                                                            "value"
                                                        ]
                                                    }
                                                ]
                                            },
                                            "setAttribute": {
                                                "type": [
                                                    "array",
                                                    "object"
                                                ],
                                                "description": "Contents of setAttribute are difficult to specify more specifically than this."
                                            }
                                        },
                                        "anyOf": [
                                            {
                                                "required": [
                                                    "stringAttribute"
                                                ]
                                            },
                                            {
                                                "required": [
                                                    "numericAttribute"
                                                ]
                                            },
                                            {
                                                "required": [
                                                    "measurementAttribute"
                                                ]
                                            },
                                            {
                                                "required": [
                                                    "codeAttribute"
                                                ]
                                            },
                                            {
                                                "required": [
                                                    "setAttribute"
                                                ]
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "tag",
                                    "value"
                                ]
                            }
                        ]
                    }
                },
                {
                    "type": "null",
                    "description": "If attributes element was allowed to be nillable and thus left empty."
                }
            ]
        },
        "reference": {
            "additionalProperties": true,
            "type": "object",
            "required": [
                "alias"
            ],
            "properties": {
                "alias": {
                    "type": "string",
                    "description": "Identifies an object by alias designated by the submitter.",
                    "title": "Alias"
                },
                "accession": {
                    "type": "string",
                    "description": "Identifies a record by its accession. The scope of resolution is the entire Archive. Should not be present when submitting.",
                    "title": "Accession"
                }
            }
        }
    },
    "type": "object",
    "description": "Describes an object that contains the samples in the data set.",
    "additionalProperties": true,
    "required": [
        "alias",
        "title",
        "shortName",
        "version",
        "metadataStandard",
        "attributes"
    ],
    "properties": {
        "alias": {
            "title": "Object alias",
            "description": "Submitter designated name for the object. The name must be unique within the Study and Dataset the entity belongs to.",
            "type": "string"
        },
        "accession": {
            "title": "Object accession ID",
            "description": "The object accession assigned by the archive. Should not be present when submitting.",
            "type": "string"
        },
        "title": {
            "title": "Dataset Title",
            "description": "The title of the dataset.",
            "type": "string"
        },
        "shortName": {
            "title": "Short Name",
            "description": "Short name for the dataset.",
            "type": "string"
        },
        "description": {
            "title": "Dataset Description",
            "description": "Free-form text describing the data sets.",
            "type": "string"
        },
        "version": {
            "title": "Dataset Version",
            "description": "The version of the dataset.",
            "type": "string"
        },
        "metadataStandard": {
            "title": "Metadata Standard",
            "description": "The metadata standard version of the dataset.",
            "type": "string"
        },
        "datasetOwnerContactEmail": {
            "title": "Dataset Owner Contact Email",
            "description": "An email address of the data owner that can be used to get in contact in case of suspicion of a data breach.",
            "type": "string"
        },
        "datasetType": {
            "title": "Dataset Type",
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "Whole slide imaging"
                ]
            },
            "uniqueItems": true
        },
        "imageRef": {
            "title": "Image Reference",
            "description": "Identifies the images which are part of this dataset.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/reference"
            }
        },
        "annotationRef": {
            "title": "Annotation Reference",
            "description": "Identifies the annotations which are part of this dataset.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/reference"
            }
        },
        "observationRef": {
            "title": "Observation Reference",
            "description": "Identifies the observations which are part of this dataset.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/reference"
            }
        },
        "complementsDatasetRef": {
            "title": "Complements Dataset Reference",
            "description": "Identifies the datasets which this dataset complements.",
            "type": "array",
            "items": {
                "$ref": "#/$defs/reference"
            }
        },
        "attributes": {
            "$ref": "#/$defs/attributes"
        }
    }
}
