{
    "type": "object",
    "title": "Workflow",
    "required": [
        "name",
        "description"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "title": "Workflow name"
        },
        "description": {
            "type": "string",
            "title": "Workflow description"
        },
        "steps": {
            "type": "array",
            "title": "Workflow steps",
            "items": {
                "type": "object",
                "title": "Workflow step",
                "required": [
                    "title",
                    "required"
                ],
                "uniqueItems": true,
                "additionalProperties": false,
                "properties": {
                    "title": {
                        "type": "string",
                        "title": "Workflow step title"
                    },
                    "required": {
                        "type": "boolean",
                        "title": "Whether the step is required for publication"
                    },
                    "schemas": {
                        "type": "array",
                        "title": "Workflow step schemas",
                        "description": "Schemas in the order they should be displayed",
                        "items": {
                            "type": "object",
                            "title": "Schema that belongs to this workflow",
                            "description": "The order of the schemas is the order they will render in the front-end",
                            "required": [
                                "name",
                                "required",
                                "allowMultipleObjects"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "title": "Name of the schema"
                                },
                                "required": {
                                    "type": "boolean",
                                    "title": "Whether the schema is required for publication"
                                },
                                "hide": {
                                    "type": "array",
                                    "title": "Schema fields to be hidden",
                                    "description": "JsonPath fields to hide in the front-end"
                                },
                                "allowMultipleObjects": {
                                    "type": "boolean",
                                    "title": "Allow multiple objects",
                                    "description": "Whether multiple instances of this schema is allowed"
                                },
                                "requires": {
                                    "type": "array",
                                    "title": "Requires schema",
                                    "description": "List of schemas required by this schema",
                                    "items": {
                                        "type": "string",
                                        "title": "Required schema name"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "publish": {
            "title": "Publish configuration",
            "type": "object",
            "required": [
                "datacite",
                "rems",
                "discovery"
            ],
            "properties": {
                "datacite": {
                    "type": "object",
                    "properties": {
                        "service": {
                            "type": "string",
                            "enum": [
                                "csc",
                                "datacite"
                            ]
                        },
                        "submission": {
                            "type": "boolean"
                        },
                        "schemas": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "rems": {
                    "type": "object",
                    "properties": {
                        "service": {
                            "type": "string",
                            "enum": [
                                "csc"
                            ]
                        },
                        "submission": {
                            "type": "boolean"
                        },
                        "schemas": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "discovery": {
                    "type": "object",
                    "properties": {
                        "service": {
                            "type": "string",
                            "enum": [
                                "metax",
                                "beacon"
                            ]
                        },
                        "submission": {
                            "type": "boolean"
                        },
                        "schemas": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
