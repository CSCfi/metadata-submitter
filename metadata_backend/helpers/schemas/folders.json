        "relatedIdentifiers": {
          "type": "array",
          "title": "Related Indetifiers",
          "description": "Must be a globally unique identifier",
          "items": {
            "type": "object",
            "title": "Identifier of related resource",
            "required": [
              "relatedIdentifier",
              "relatedIdentifierType",
              "relationType"
            ],
            "properties": {
              "relatedIdentifier": {
                "type": "string",
                "title": "Identifier",
                "description": "These must be globally unique identifiers and correspond to the type selected"
