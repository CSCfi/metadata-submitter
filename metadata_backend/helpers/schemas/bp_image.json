{
    "title": "Image",
    "definitions": {
        "ImageFile": {
            "$id": "#/definitions/ImageFile",
            "title": "ImageFileType",
            "type": "object",
            "required": [
                "file_type"
            ],
            "properties": {
                "file_type": {
                    "title": "File Type",
                    "description": "The type of the file.",
                    "type": "string",
                    "enum": [
                        "dcm"
                    ]
                },
                "fileBase": {
                    "title": "File Base Type",
                    "$ref": "#/definitions/FileBase"
                }
            }
        },
        "FileBase": {
            "$id": "#/definitions/FileBase",
            "title": "File Base",
            "type": "object",
            "required": [
                "file_name",
                "checksum_method",
                "checksum"
            ],
            "properties": {
                "file_name": {
                    "title": "File Name",
                    "description": "The file name.",
                    "type": "string"
                },
                "checksum_method": {
                    "title": "Checksum Method",
                    "description": "The checksum method generated by the MD5 method (md5sum in unix) or the SHA256 method.",
                    "type": "string",
                    "enum": [
                        "MD5",
                        "SHA256"
                    ]
                },
                "checksum": {
                    "title": "Checksum",
                    "description": "The file checksum.",
                    "type": "string"
                },
                "unencrypted_checksum": {
                    "title": "Checksum",
                    "description": "The checksum of the unencrypted file (used in conjunction with the checksum of an encrypted file).",
                    "type": "string"
                }
            }
        }
    },
    "type": "object",
    "required": [
        "studyRef",
        "imageOf",
        "imageType",
        "files"
    ],
    "properties": {
        "acquisition_date_time": {
            "title": "Acquisition Date Time",
            "type": "string"
        },
        "lossy_image_compression_methods": {
            "title": "Lossy Image Compression Methods",
            "type": "string"
        },
        "compression_status": {
            "title": "Compression Status",
            "type": "boolean"
        },
        "has_overview": {
            "title": "Has Overview",
            "type": "boolean"
        },
        "has_label": {
            "title": "Has Label",
            "type": "boolean"
        },
        "tma_status": {
            "title": "TMA Status",
            "type": "boolean"
        },
        "scanner": {
            "title": "Scanner",
            "type": "object",
            "properties": {
                "scanner_manufactors_name": {
                    "title": "Scanner Manufactors Name",
                    "type": "string"
                },
                "manufacturers_model_name": {
                    "title": "Manufacturers Model Name",
                    "type": "string"
                },
                "device_serial_number": {
                    "title": "Device Serial Number",
                    "type": "string"
                },
                "software_versions": {
                    "title": "Software Versions",
                    "type": "string"
                }
            }
        },
        "imaging_setting": {
            "title": "imaging_setting",
            "type": "object",
            "properties": {
                "image_resolution": {
                    "title": "Image Resolution",
                    "type": "string"
                },
                "optical_paths": {
                    "title": "Optical Paths",
                    "type": "object",
                    "properties": {
                        "color_space": {
                            "title": "Color Space",
                            "type": "string"
                        },
                        "color_depth": {
                            "title": "Color Depth",
                            "type": "number"
                        },
                        "illumination": {
                            "title": "Illumination",
                            "type": "object",
                            "properties": {
                                "type": {
                                    "title": "Type",
                                    "type": "string"
                                },
                                "color_code": {
                                    "title": "Color Code",
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "focus": {
                    "title": "Focus",
                    "type": "object",
                    "properties": {
                        "focus_method": {
                            "title": "Focus Method",
                            "type": "string"
                        },
                        "extended_depth_of_field": {
                            "title": "Extended Depth Of Field",
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "base_layer_tile_size": {
            "title": "Base Layer Tile Size",
            "type": "object",
            "properties": {
                "width": {
                    "title": "Width",
                    "type": "number"
                },
                "height": {
                    "title": "Height",
                    "type": "number"
                }
            }
        },
        "image_shape": {
            "title": "Image Shape",
            "type": "object",
            "properties": {
                "width": {
                    "title": "Width",
                    "type": "number"
                },
                "height": {
                    "title": "Height",
                    "type": "number"
                }
            }
        },
        "studyRef": {
            "title": "Study Reference",
            "description": "Identifies the parent study.",
            "type": "object",
            "$ref": "#/definitions/reference"
        },
        "imageOf": {
            "title": "Image Of",
            "description": "One of more samples imaged by the image.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/reference"
            }
        },
        "imageType": {
            "title": "Image Type",
            "description": "The type of the image.",
            "type": "string",
            "enum": [
                "WSI_IMAGE",
                "GROSS_IMAGE"
            ]
        },
        "files": {
            "title": "Files",
            "description": "Data files associated with the image.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/ImageFile"
            }
        }
    }
}