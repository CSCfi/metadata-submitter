                },
                {
                    "name": "policy",
                    "required": true,
                    "allowMultipleObjects": true
                }
            ]
        },
        {
            "title": "Describe",
            "required": true,
            "schemas": [
                {
                    "name": "sample",
                    "required": false,
                    "allowMultipleObjects": true
                },
                {
                    "name": "experiment",
                    "required": false,
                    "allowMultipleObjects": true
                },
                {
                    "name": "analysis",
                    "required": false,
                    "allowMultipleObjects": true
